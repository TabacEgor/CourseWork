    <style name="MyForecastStyle" parent="android:Widget.TextView">
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:fontFamily" tools:ignore="NewApi">casual</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
